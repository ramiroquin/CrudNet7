@*Importar*@
@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Detalle Contacto";
}

@*---------titulo-------*@
<h1 class="text-center">Contacto con .NET 7</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detallle Usuario</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: @Html.DisplayFor(m => m.Nombre)</strong></li>
                    <li class="list-group-item"><strong>Apellido: @Html.DisplayFor(m => m.Apellido)</strong></li>
                    <li class="list-group-item"><strong>Celular: @Html.DisplayFor(m => m.Celular)</strong></li>
                    <li class="list-group-item"><strong>Email: @Html.DisplayFor(m => m.Email)</strong></li>
                </ul>
                <a asp-controller="Home" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>